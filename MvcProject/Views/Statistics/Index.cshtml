
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Statistics</h2>


<div class="row">
    <!-- Info Boxes Style 2 -->
    <div class="col-md-4">
        <div class="info-box mb-4 bg-warning">
            <div class="info-box-content">
                <span class="info-box-text" style="text-align:center"><strong>Total Number of Categories</strong></span>
                <span class="info-box-number" style="text-align:center">@ViewBag.CategoryCount</span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>

    <!-- /.info-box -->
    <div class="col-sm-4">
        <div class="info-box mb-4 bg-success">
            <div class="info-box-content">
                <span class="info-box-text" style="width:auto; text-align:center"><strong>Number of Heading Belonging to the "Software" Category in the Heading</strong></span>
                <span class="info-box-number" style="text-align:center">@ViewBag.HeadingCountWithYazilimCategory</span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    <div class="col-sm-4">
        <div class="info-box mb-4 bg-danger">
            <div class="info-box-content">
                <span class="info-box-text" style="text-align:center"><strong>Number of Authors with the Letter "a" in the Name</strong></span>
                <span class="info-box-number" style="text-align:center">@ViewBag.WriterCountWithLetterA</span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    <!-- /.info-box -->
   
    <div class="col-sm-4">
        <div class="info-box mb-4 bg-info">
            <div class="info-box-content">
                <span class="info-box-text" style="width:auto; text-align:center"><strong>Category Name with Most Headings</strong></span>
                <span class="info-box-number" style="text-align:center">@ViewBag.MaxCategoryName</span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    <!-- /.info-box -->
   
    <div class="col-md-4">
        <div class="info-box mb-4 bg-red" style="width:auto">
            <div class="info-box-content">
                <span class="info-box-text" style="width: auto; text-align: center;overflow-wrap: break-word"><strong>Difference Between Categories that Status True and False.</strong></span>
                <span class="info-box-number" style="text-align:center">@ViewBag.CategoryDifference</span>
            </div>
            <!-- /.info-box-content -->
        </div>
    </div>
    
</div>



