@model MvcProject.EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Add New Category Page</h1>
<br />

@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Category Name")
        @Html.TextBoxFor(x => x.CategoryName, new { @class="from-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br /> <br />
        @Html.Label("Enter a description")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "from-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)

        <button class="btn btn-info">Kaydet</button>
    </div>
}

